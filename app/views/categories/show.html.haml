= render 'shared/header'

.nav
  %ul.nav__lists
    %li.nav__lists__list
      - breadcrumb :category
      = breadcrumbs separator: " #{content_tag(:i, '', class: 'fas fa-chevron-right nav__lists__list--icon ' )} "


.categories-main
  - if @category.has_children?
    %ul
      - @category.children.each do |category|
        %li.categories-main__lists
          = link_to category_path(category) do
            = category.name
  .categories-main__index
    .categories-main__index--title
      = @category.name + 'の商品一覧'
    .categories-main__index--items
      %ul.categories-main__index__contents
        = render partial: "categories/product", collection: @products
      = paginate(@products)

= render 'shared/sellbutton'

= render 'shared/appbanner'
  
= render 'shared/footer'
