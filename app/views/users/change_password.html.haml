= render 'shared/header'

.nav
  %ul.nav__lists
    %li.nav__lists__list
      - breadcrumb :chenge_password
      = breadcrumbs separator: " #{content_tag(:i, '', class: 'fas fa-chevron-right nav__lists__list--icon ' )} "


.main.clearfix
  .change_password__main__rights
    .change_password__main__rights__header
      メール／パスワード
    .change_password__main__rights__contents
      .change_password__main__rights__contents__form
        = form_for(current_user) do |f|
          .change_password__main__rights__contents__form__box
            = f.label :postcode, 'メールアドレス', class: 'change_password__main__rights__contents__form__box__top'
            = f.text_field :email, value: current_user.email
            %p メールアドレスを変更すると確認メールが送信されます。<br>メール内のURLをクリックすると変更完了です。
          -# .main__rights__contents__form__box
          -#   = b.label :password, '現在のパスワード', class: 'main__rights__contents__form__box__top'
          -#   = b.text_field :email, value: current_user.password
          .change_password__main__rights__contents__form__box
            = f.label :password, '新しいパスワード', class: 'change_password__main__rights__contents__form__box__top'
            = f.text_field :password, placeholder: '7文字以上の半角英数字'
            %p ※英字と数字の両方を含めて設定してください
          .change_password__main__rights__contents__form__box
            = f.label :password_confirmation, '新しいパスワード確認', class: 'change_password__main__rights__contents__form__box__top'
            = f.text_field :password_confirmation, placeholder: '新しいパスワードを再入力'
          .change_password__main__rights__contents__form__box
            = f.submit '変更する', class: 'form--button'

  = render 'sidebar'

= render 'shared/sellbutton'

= render 'shared/appbanner'

= render 'shared/footer'
