= render 'shared/header'

-# ユーザー編集
.nav
  %ul.nav__lists
    %li.nav__lists__list
      - breadcrumb :profile
      = breadcrumbs separator: " #{content_tag(:i, '', class: 'fas fa-chevron-right nav__lists__list--icon ' )} "

.main
  .main--profile_contents
    = form_for(current_user) do |f|
      .main--profile_contents__title
        %h1 プロフィール
      .main--profile_contents__user_name
        = image_tag 'human.svg', alt: '', class: 'user_img'
        = f.text_field :nickname, value: current_user.nickname, class: 'user_name'
      .main--profile_contents__user_message
        = f.text_area :profile, rows: '9', wrap: 'soft', class: 'profile_message', placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪"
        = f.submit '変更する', class: 'button'

  = render 'sidebar'

= render 'shared/sellbutton'

= render 'shared/appbanner'

= render 'shared/footer'